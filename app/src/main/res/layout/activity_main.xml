<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.cordova.lysedebiyat.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/soruWrapper"
        style="@style/questionCardView"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/soru"
            style="@style/questionTextView" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cevap1Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/soruWrapper"
        android:layout_marginTop="50dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap1"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cevap2Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/cevap1Wrapper"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap2"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cevap3Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/cevap2Wrapper"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap3"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
