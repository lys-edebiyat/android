<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.cordova.lysedebiyat.MainActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/soruWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            style="@style/questionCardView"
            app:cardPreventCornerOverlap="false">

            <TextView
                android:id="@+id/soru"
                style="@style/questionTextView" />

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_above="@+id/cevap2Wrapper"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:maxHeight="75dp"
                android:maxWidth="75dp"
                android:src="@drawable/ic_menu_white_24dp" />
        </android.support.v7.widget.CardView>

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cevap1Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/soruWrapper"
        android:layout_marginTop="50dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap1"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cevap2Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/cevap1Wrapper"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap2"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cevap3Wrapper"
        style="@style/answerCardView"
        android:layout_below="@+id/cevap2Wrapper"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/cevap3"
            style="@style/answerButton" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
