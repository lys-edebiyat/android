<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/icons</item>
        <item name="android:buttonStyle">@style/answerButton</item>
        <item name="buttonStyle">@style/answerButton</item>
    </style>

    <style name="answerCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:bottomLeftRadius">200dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/btn_ripple</item>
    </style>

    <style name="answerButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">"Test Text"</item>
    </style>

</resources>
